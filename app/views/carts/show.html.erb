<div class="container">
  <table class="table table-bordered">
	<thead>
		<th>图片</th>
		<th>名称</th>
		<th>说明</th>
		<th>数量</th>
		<th>价格</th>
		<th>操作</th>
	</thead>
	<tbody class="line-items">
    <% current_user.cart.lineItems.each do |l| %>
  	<tr>
		<td><%= image_tag l.product.pictures.first.pic.url(:small), class: "picture" %></td>
        <td><%= l.product.name %></td>
        <td><%= truncate l.product.description, length: 100 %></td>
        <td><%= l.count %></td>
        <td><%= l.count * l.product.price %></td>
	    <td><%= link_to '删除', l, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  	</tr>
    <% end %>

	<tr>
	  <td colspan="4">合计金额</td>
	  <td><%= @total %></td>
	  <td></td>
	</tr>
	</tbody>
  </table>
</div>
